{
  "name": "fresh-snippets",
  "displayName": "Fresh Snippets",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:fresh.gen.ts"
  ],
  "contributes": {
    "commands": [
      {
        "command": "fresh-snippets.generateRoute",
        "title": "New Route Component"
      },
      {
        "command": "fresh-snippets.generateLayout",
        "title": "New Layout"
      },
      {
        "command": "fresh-snippets.generateComponent",
        "title": "New Component"
      },
      {
        "command": "fresh-snippets.generateIsland",
        "title": "New Island Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder && resourceFilename =~ /routes/",
          "command": "fresh-snippets.generateRoute",
          "group": "Fresh"
        },
        {
          "when": "explorerResourceIsFolder && resourceFilename =~ /islands/",
          "command": "fresh-snippets.generateIsland",
          "group": "Fresh"
        },
        {
          "when": "explorerResourceIsFolder && resourceFilename =~ /components/",
          "command": "fresh-snippets.generateComponent",
          "group": "Fresh"
        },
        {
          "when": "explorerResourceIsFolder && resourceFilename =~ /routes/",
          "command": "fresh-snippets.generateLayout",
          "group": "Fresh"
        }
      ]
    }

  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
